body {
    margin: 0;
    box-sizing: border-box;
}

main {
    background-color: lightgray;
}

a {
    font-family: 'Roboto', 'segoe UI', 'Cantarell', sans-serif;
    text-decoration: none;
}

h1 {
    font-family: 'Roboto', 'segoe UI', 'Cantarell', sans-serif;
}

nav {
    background: rgb(138,36,201);
	/* background: linear-gradient(-90deg, rgba(138,36,201,1) 0%, rgba(108,41,209,1) 100%, rgba(0,212,255,1) 100%); */
	background: linear-gradient(45deg, DarkViolet 0%, purple 100%);
    color:white;
    overflow: hidden;
    font-family: 'Roboto';
    /* position: sticky; */
}

.navbar-link {
    /* float: left; */
    font-size: 20px;
    color: white;
    text-align: center;
    padding: 18px 16px;
    text-decoration: none;
    /* margin: 0; */
    justify-content: center;
}

.dropdown {
    float: left;
    overflow: hidden;
}

.dropdown .dropdown-button {
    /* font-size: 19px; */
    border: none;
    outline: none;
    color: white;
    /* padding: 18px 16px; */
    background-color: inherit;
    font-family: inherit;
    margin: 0;
    padding: 0;
}

/* .navbar a:hover:not(.dropdown-button), .dropdown:hover .dropdown-button {
    background-color: rgba(0, 0, 0, 0.2);
} */

.navbar a:hover, .dropdown-button {
    background-color: rgba(0, 0, 0, 0.2);
}

#navbar-header > a {
    padding: none;
}

#navbar-header > a:hover {
    text-decoration: none;
    background-color: none;
    background: none;
}

.dropdown-content {
    display: none;
    position: absolute;
    min-width: 180px;
    box-shadow: 0px 8px 16px 0px rgba(0, 0,0 , 20%);
    z-index: 1;
    background: white;
}

.dropdown-content a {
    float: none;
    color: black;
    padding: 13px 16px;
    text-decoration: none;
    display: block;
    text-align: left;
}

.dropdown-content > a:hover {
    background-color: #ddd;
}

.dropdown:hover .dropdown-content {
    display: block;
}

#navbar-header {
    float: left;
    color: white;
    text-align: center;
    margin: 0;
    font-size: 22px;
    padding: 18px 25px;
    margin-right: 50px;
}